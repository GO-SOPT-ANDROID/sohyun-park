<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.GoSopt" parent="">
        <item name="android:fontFamily">@font/font</item>
        <item name="fontWeight">400</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextAppearance.GoSopt.DisplayLarge">
        <item name="fontWeight">700</item>
        <item name="android:textSize">24dp</item>
        <item name="lineHeight">30dp</item>
    </style>

    <style name="TextAppearance.GoSopt.DisplayMedium">
        <item name="fontWeight">500</item>
        <item name="android:textSize">24dp</item>
        <item name="lineHeight">30dp</item>
    </style>

    <style name="TextAppearance.GoSopt.HeadLineLarge">
        <item name="fontWeight">700</item>
        <item name="android:textSize">20dp</item>
        <item name="lineHeight">25dp</item>
    </style>

    <style name="TextAppearance.GoSopt.HeadLineMedium">
        <item name="fontFamily">@font/font</item>
        <item name="android:textSize">16dp</item>
        <item name="lineHeight">20dp</item>
    </style>

    <style name="TextAppearance.GoSopt.BodyLarge">
        <item name="fontWeight">500</item>
        <item name="android:textSize">16dp</item>
        <item name="lineHeight">20dp</item>
    </style>

    <style name="TextAppearance.GoSopt.BodyMedium">
        <item name="fontWeight">400</item>
        <item name="android:textSize">14dp</item>
        <item name="lineHeight">18dp</item>
    </style>

    <style name="TextAppearance.GoSopt.BodySmall">
        <item name="fontWeight">400</item>
        <item name="android:textSize">12dp</item>
        <item name="lineHeight">15dp</item>
    </style>

    <style name="TextAppearance.GoSopt.CaptionLarge">
        <item name="fontWeight">500</item>
        <item name="android:textSize">12dp</item>
        <item name="lineHeight">15dp</item>
    </style>

    <style name="TextAppearance.GoSopt.CaptionMedium">
        <item name="fontWeight">500</item>
        <item name="android:textSize">10dp</item>
        <item name="lineHeight">15dp</item>
    </style>
</resources>
